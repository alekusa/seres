# Uncomment this line to define a global platform for your project
platform :ios, '15.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    
    target.build_configurations.each do |config|
      # Global fixes for Xcode 15+ and iOS 18
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
      config.build_settings['ENABLE_USER_SCRIPT_SANDBOXING'] = 'NO'
      config.build_settings['ALWAYS_EMBED_SWIFT_STANDARD_LIBRARIES'] = '$(inherited)'
      
      # Privacy bundle fix - crucial for Xcode 15+
      if target.respond_to?(:product_type) && target.product_type == "com.apple.product-type.bundle"
        config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
      end
    end
  end

  # Fix for Runner target in the user project
  installer.aggregate_targets.map(&:user_project).uniq.each do |project|
    runner_target = project.native_targets.find { |t| t.name == 'Runner' }
    if runner_target
      phase_name = '[AA] Fix iOS 18 Simulator Dyld'
      
      # Robustly remove ALL existing phases with this name
      runner_target.build_phases.each do |phase|
        if phase.respond_to?(:name) && phase.name == phase_name
          runner_target.build_phases.delete(phase)
        end
      end
      
      puts "Adding Recursive Dyld Patch Build Phase to Runner target..."
      phase = runner_target.new_shell_script_build_phase(phase_name)
      
      phase.shell_script = <<-'SCRIPT'
        set -e
        echo "Executing Robust iOS 18 Simulator Dyld Patch..."
        
        # 1. Find the Runtime Root Volume dynamically
        # Usually looking for iOS_XXXXXX
        RUNTIME_VOL=$(xcrun simctl list runtimes | grep -o "iOS_[A-Z0-9]*" | head -n 1)
        if [ -z "$RUNTIME_VOL" ]; then
          echo "Warning: Could not find Simulator Runtime Volume. Patch might be incomplete."
          RUNTIME_ROOT=""
        else
          # Find the .simruntime path inside the volume
          RUNTIME_PATH_BASE="/Library/Developer/CoreSimulator/Volumes/$RUNTIME_VOL/Library/Developer/CoreSimulator/Profiles/Runtimes"
          SIM_PATH=$(ls "$RUNTIME_PATH_BASE" | grep ".simruntime" | head -n 1)
          RUNTIME_ROOT="$RUNTIME_PATH_BASE/$SIM_PATH/Contents/Resources/RuntimeRoot"
          echo "Found Runtime Root: $RUNTIME_ROOT"
        fi

        # Common search paths for Swift libraries in iOS 18 Simulators
        CRYPTER_PATH="$RUNTIME_ROOT/System/Cryptexes/OS/usr/lib/swift"
        SWIFT_PATH="$RUNTIME_ROOT/usr/lib/swift"

        # Find all Mach-O binaries in the app bundle
        find "$TARGET_BUILD_DIR" -type f -maxdepth 6 | while read -r BIN; do
          if file "$BIN" | grep -q "Mach-O"; then
            echo "Patching: $(basename "$BIN")"
            
            # Unconditionally add search paths (RPATHs)
            [ -d "$CRYPTER_PATH" ] && install_name_tool -add_rpath "$CRYPTER_PATH" "$BIN" 2>/dev/null || true
            [ -d "$SWIFT_PATH" ] && install_name_tool -add_rpath "$SWIFT_PATH" "$BIN" 2>/dev/null || true
            install_name_tool -add_rpath "/usr/lib/swift" "$BIN" 2>/dev/null || true
            install_name_tool -add_rpath "@executable_path/Frameworks" "$BIN" 2>/dev/null || true
            install_name_tool -add_rpath "@loader_path/Frameworks" "$BIN" 2>/dev/null || true
            
            # Convert absolute Swift system paths to @rpath
            otool -L "$BIN" | grep "/usr/lib/swift/" | awk '{print $1}' | while read -r lib; do
               new_lib=$(echo "$lib" | sed 's|/usr/lib/swift/|@rpath/|')
               echo "  Mapping $lib -> $new_lib"
               install_name_tool -change "$lib" "$new_lib" "$BIN" 2>/dev/null || true
            done
            
            # Re-sign the binary after modification
            codesign -f -s - "$BIN" 2>/dev/null || true
          fi
        done
        echo "Robust dyld patch finished."
      SCRIPT
    end
    
    # Also apply general build settings for all native targets
    project.native_targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['ENABLE_USER_SCRIPT_SANDBOXING'] = 'NO'
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
      end
    end
    
    project.save
  end
end
